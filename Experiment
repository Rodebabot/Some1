import os
import pandas as pd

folder_path = 'path/to/your/excel/files'

# Create a new folder to store modified Excel files
output_folder = 'path/to/your/output/folder'
os.makedirs(output_folder, exist_ok=True)

def shift_non_empty_cells(file_path, output_folder):
    # Read the Excel file
    df = pd.read_excel(file_path, engine='openpyxl', skiprows=3)

    # Iterate through each row
    for index, row in df.iterrows():
        # Find the index of the leftmost non-empty cell in each row
        first_non_empty_index = row.first_valid_index()

        # Create a new row with non-empty cells left-aligned
        new_row = row[first_non_empty_index:].tolist() + [None] * (len(df.columns) - len(row))

        # Update the original row with the modified data
        df.loc[index] = new_row

    # Construct the output file path with a new extension
    output_file = os.path.join(output_folder, os.path.basename(file_path))

    # Write the modified dataframe to the new Excel file
    df.to_excel(output_file, index=False)

# Iterate through all Excel files in the specified folder
for file_name in os.listdir(folder_path):
    if file_name.endswith('.xlsx') or file_name.endswith('.xls'):
        file_path = os.path.join(folder_path, file_name)
        shift_non_empty_cells(file_path, output_folder)
