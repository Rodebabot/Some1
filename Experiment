# Function to update task dropdown based on the selected team
def update_task_dropdown(event):
    selected_team = team_var.get()
    tasks_for_team = list(data[selected_team].keys())
    task_dropdown["values"] = tasks_for_team

    # Check if the selected task has a "Fixed" option and disable the input field if it's fixed
    selected_task = task_var.get()
    if selected_team in data and selected_task in data[selected_team]:
        option = data[selected_team][selected_task]["option"]
        if option == "Fixed":
            entry.configure(state="disabled")
        else:
            entry.configure(state="normal")

team_dropdown.bind("<<ComboboxSelected>>", update_task_dropdown)
