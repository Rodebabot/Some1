import tkinter as tk
from tkinter import ttk
import pandas as pd

class ExcelSearchApp:
    def __init__(self, master):
        self.master = master
        self.master.title("Excel Search App")

        # Load Excel file
        self.df = pd.read_excel("your_excel_file.xlsx")

        # Create widgets
        self.label = tk.Label(master, text="Enter Client Name:")
        self.label.pack()

        self.entry = tk.Entry(master)
        self.entry.pack()

        self.button = tk.Button(master, text="Search", command=self.search)
        self.button.pack()

        self.tree_frame = ttk.Frame(master)
        self.tree_frame.pack(fill=tk.BOTH, expand=True)

        self.tree_scroll = tk.Scrollbar(self.tree_frame)
        self.tree_scroll.pack(side=tk.RIGHT, fill=tk.Y)

        self.tree = ttk.Treeview(self.tree_frame, yscrollcommand=self.tree_scroll.set)
        self.tree_scroll.config(command=self.tree.yview)
        self.tree["columns"] = list(self.df.columns)
        self.tree.pack(fill=tk.BOTH, expand=True)

        self.tree.heading("#0", text="Index")
        for col in self.df.columns:
            self.tree.heading(col, text=col)

    def search(self):
        client_name = self.entry.get()
        result = self.df[self.df['Client Name'] == client_name]
        if not result.empty:
            self.update_tree(result)
        else:
            self.clear_tree()

    def update_tree(self, result):
        self.clear_tree()
        for index, row in result.iterrows():
            self.tree.insert("", "end", text=index, values=list(row))

    def clear_tree(self):
        for item in self.tree.get_children():
            self.tree.delete(item)

def main():
    root = tk.Tk()
    app = ExcelSearchApp(root)
    root.mainloop()

if __name__ == "__main__":
    main()
