import pandas as pd

# Assuming your dataframe is called 'df'
def modify_dataframe(df):
  # Copy all values from the first row to the second row
  df.iloc[1] = df.iloc[0]

  # Set the first row (now a copy of the original first row) as the column headers
  df.columns = df.iloc[0]

  # Drop the first row (now duplicated in the second row)
  return df.drop(0)

# Apply the function to your dataframe and store the modified version
modified_df = modify_dataframe(df.copy())

# Now 'modified_df' has the desired changes



df.columns = ['A', 'b', 'c', *df.columns[4:]]
