import tkinter as tk
import pandas as pd

# Read data from the Excel file
excel_file = "your_excel_file.xlsx"
df = pd.read_excel(excel_file)

def search():
    input_text = input_entry.get()
    display_words_with_links = []

    for index, row in df.iterrows():
        keyword = row["keyword"]
        display_word = row["displayword"]
        url = row["url"]

        if keyword.lower() in input_text.lower():
            display_word_link = f'<a href="{url}">{display_word}</a>'
            display_words_with_links.append(display_word_link)

    if display_words_with_links:
        display_box.config(state=tk.NORMAL)
        display_box.delete(1.0, tk.END)
        display_box.insert(tk.END, "\n".join(display_words_with_links))
        display_box.config(state=tk.DISABLED)
    else:
        display_box.config(state=tk.NORMAL)
        display_box.delete(1.0, tk.END)
        display_box.insert(tk.END, "No keywords found")
        display_box.config(state=tk.DISABLED)

# Create the main window
root = tk.Tk()
root.title("Keyword Search App")

# Create and configure input elements
input_label = tk.Label(root, text="Enter a sentence:")
input_label.pack()
input_entry = tk.Entry(root)
input_entry.pack()
search_button = tk.Button(root, text="Search", command=search)
search_button.pack()

# Create and configure result elements
display_label = tk.Label(root, text="Display Words with Links:")
display_label.pack()
display_box = tk.Text(root, height=10, width=50)
display_box.pack()
display_box.config(state=tk.DISABLED)

# Start the Tkinter main loop
root.mainloop()
