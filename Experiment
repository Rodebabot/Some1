import pandas as pd

# Sample data
data = {
    'Entity': ['A', 'B', 'A', 'B', 'A'],
    'Counterparty Name': ['C1', 'C2', 'C1', 'C2', 'C1'],
    'CCY': ['USD', 'EUR', 'USD', 'EUR', 'USD'],
    'Value Date': ['2024-03-28', '2024-03-28', '2024-03-29', '2024-03-29', '2024-03-30'],
    'V': [100, 200, 150, 250, 300],
    'V1': [50, 70, 80, 90, 100]
}

# Create DataFrame
df = pd.DataFrame(data)

# Convert 'Value Date' column to datetime type
df['Value Date'] = pd.to_datetime(df['Value Date'])

# Create pivot table
pivot_table = pd.pivot_table(df, values=['V', 'V1'], index=['Entity', 'Counterparty Name', 'CCY'],
                             columns='Value Date', aggfunc='sum', fill_value=0)

# Reorder columns to display 'V' and 'V1' side by side for every date
pivot_table = pivot_table.swaplevel(axis=1).sort_index(axis=1)

print(pivot_table)
