import fitz  # PyMuPDF
from PIL import Image

def extract_images_from_pdf(pdf_path, output_folder):
    doc = fitz.open(pdf_path)

    for page_num in range(doc.page_count):
        page = doc[page_num]
        images = page.get_images(full=True)
        
        for img_index, img_info in enumerate(images):
            img_index += 1  # Adjust index to start from 1
            img_index_str = str(img_index).zfill(3)  # Zero-padding for sorting
            img_index_str = f"{img_index_str}.png"
            
            img = Image.open(io.BytesIO(img_info["image"]))
            img.save(f"{output_folder}/{img_index_str}")

    doc.close()

# Example usage
pdf_file_path = "your_file.pdf"
output_folder_path = "output_images"

extract_images_from_pdf(pdf_file_path, output_folder_path)
