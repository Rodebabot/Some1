import pandas as pd

# Sample DataFrame for illustration
data = {
    'c1': ['A', 'B', 'A', 'C', 'B', 'D', 'A', 'C', 'D', 'D', 'E', 'F']
}

# Create the original DataFrame
df4 = pd.DataFrame(data)

# Get the count of unique values in the 'c1' column
value_counts = df4['c1'].value_counts()

# Filter values that appear more than once
repeated_values = value_counts[value_counts > 1].index

# Create a new DataFrame with these repeated values
df_repeated = df4[df4['c1'].isin(repeated_values)].reset_index(drop=True)

print(df_repeated)
