import shutil
import os

# Replace this with the cleaned line obtained from the email body
cleaned_line = r'C:\Path\To\Your\File.xlsx'  # Replace this with the actual cleaned line

destination_folder = r'C:\Path\To\Your\Destination\Folder'  # Change this to your desired destination folder

# Remove '<' and '>' signs from the cleaned line
cleaned_line = cleaned_line.replace('<', '').replace('>', '')

# Extract the file name from the path
file_name = os.path.basename(cleaned_line)

# Construct the destination path
destination_path = os.path.join(destination_folder, file_name)

# Copy the file to the destination folder
try:
    shutil.copy(cleaned_line, destination_path)
    print(f'File copied to {destination_path}')
except FileNotFoundError:
    print('File not found. Please check the file path.')
except Exception as e:
    print(f'An error occurred: {e}')
