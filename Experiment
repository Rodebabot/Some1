import tkinter as tk
from tkinter import ttk
import webbrowser

# Sample data (replace with your Excel data)
data = [
    ["Keyword1 Keyword3", "DisplayWord1", "http://example.com/page1"],
    ["Keyword2", "DisplayWord2", "http://example.com/page2"],
    ["Keyword3", "DisplayWord3", "http://example.com/page3"],
    # Add more rows as needed
]

def open_url():
    selected_display_word = display_word_var.get()
    for row in data:
        if row[1] == selected_display_word:
            webbrowser.open(row[2])
            break

def update_display_words(*args):
    search_keywords = set(search_var.get().lower().split())  # Split search into words
    suggestions = []

    for row in data:
        keywords = set(row[0].lower().split())
        if search_keywords.issubset(keywords) or any(keyword in keywords for keyword in search_keywords):
            suggestions.append(row[1])

    display_word_combobox['values'] = suggestions

app = tk.Tk()
app.title("Keyword Search App")

search_label = ttk.Label(app, text="Enter keywords:")
search_label.pack(pady=10)

search_var = tk.StringVar()
search_entry = ttk.Entry(app, textvariable=search_var)
search_entry.pack()

display_word_label = ttk.Label(app, text="Select a display word:")
display_word_label.pack(pady=10)

display_word_var = tk.StringVar()
display_word_combobox = ttk.Combobox(app, textvariable=display_word_var)
display_word_combobox.pack()

search_var.trace_add("write", update_display_words)

open_button = ttk.Button(app, text="Open URL", command=open_url)
open_button.pack(pady=10)

app.mainloop()
