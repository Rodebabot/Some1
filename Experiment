import os
from pyxlsb import open_workbook
import pandas as pd
import datetime

# Get the current date
current_date = datetime.datetime.now().date()

# Specify the parent directory to search
parent_directory_path = "/path/to/parent/directory"

# List directories in the parent directory
directories = [d for d in os.listdir(parent_directory_path) if os.path.isdir(os.path.join(parent_directory_path, d))]

# Filter directories based on current month and year
matching_directories = [d for d in directories if current_month_year in d]

# If there's a matching directory for the current month and year, navigate into it
if matching_directories:
    current_month_directory = os.path.join(parent_directory_path, matching_directories[0])
    print("Found directory for current month and year:", current_month_directory)
    
    # Get today's date in the format "05 Feb"
    current_day_month = datetime.datetime.now().strftime("%d %b")
    
    # List directories inside the current month directory
    month_directories = [d for d in os.listdir(current_month_directory) if os.path.isdir(os.path.join(current_month_directory, d))]
    
    # Find the closest previous day directory
    closest_previous_date_directory = None
    for directory in sorted(month_directories, reverse=True):
        directory_date = datetime.datetime.strptime(directory, "%d %b").date()
        if directory_date < current_date:
            closest_previous_date_directory = os.path.join(current_month_directory, directory)
            break
    
    # If there's a closest previous day directory, navigate into it
    if closest_previous_date_directory:
        print("Found closest previous day directory:", closest_previous_date_directory)
        
        # List files inside the closest previous day directory
        files = [f for f in os.listdir(closest_previous_date_directory) if os.path.isfile(os.path.join(closest_previous_date_directory, f))]
        
        # Filter XLSB files in the directory
        xlsb_files = [f for f in files if f.endswith('.xlsb')]

        # If there's an XLSB file in the directory, read it
        if xlsb_files:
            xlsb_file_path = os.path.join(closest_previous_date_directory, xlsb_files[0])
            print("Found XLSB file for the closest previous day:", xlsb_file_path)

            # Initialize a list to store DataFrames for each sheet
            dfs = []

            # Open the XLSB file
            with open_workbook(xlsb_file_path) as wb:
                # Iterate over sheets in the workbook
                for sheetname in wb.sheets:
                    # Read each sheet into a DataFrame
                    with wb.get_sheet(sheetname) as sheet:
                        data = []
                        for row in sheet.rows():
                            data.append([item.v for item in row])
                        df = pd.DataFrame(data[1:], columns=data[0])  # Assuming the first row is headers
                        dfs.append(df)

            # Store each sheet in a separate DataFrame
            df1, df2, df3, df4 = dfs

            # Example usage of the DataFrames
            print("DataFrame 1:")
            print(df1.head())
            print("DataFrame 2:")
            print(df2.head())
            print("DataFrame 3:")
            print(df3.head())
            print("DataFrame 4:")
            print(df4.head())
        else:
            print("No XLSB file found in the closest previous day directory.")
    else:
        print("No closest previous day directory found inside the current month and year directory.")
else:
    print("No directory found for the current month and year.")
