import pandas as pd

# Define the list of economic indicators and their weights
indicators = {
    "GDP Growth": 0.4,
    "Unemployment Rate": 0.3,
    "Inflation Rate": 0.3,
}

# Load economic data from an Excel file
data_file = "economic_data.xlsx"
df = pd.read_excel(data_file)

# Create an empty list to store the results
results = []

# Loop through each row in the DataFrame
for index, row in df.iterrows():
    country_name = row["Country"]  # Assuming "Country" is the column with country names
    economic_score = (row["GDP Growth"] * indicators["GDP Growth"] +
                      row["Unemployment Rate"] * indicators["Unemployment Rate"] +
                      row["Inflation Rate"] * indicators["Inflation Rate"])

    # Determine the economic situation based on the score
    for situation, threshold in thresholds.items():
        if economic_score >= threshold:
            economic_situation = situation
            break

    # Add the results to the list
    results.append({"Country": country_name, "Economic Score": economic_score, "Economic Situation": economic_situation})

# Create a DataFrame to store the results
result_df = pd.DataFrame(results)

# Save the results to a new Excel file or do further analysis as needed
result_df.to_excel("economic_scores.xlsx", index=False)
