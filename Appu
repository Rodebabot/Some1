import pandas as pd
import tkinter as tk
from tkinter import Entry, Button

# Read the Excel file into a DataFrame
df = pd.read_excel('your_excel_file.xlsx')

# Build a dictionary that maps combinations of 'a' and 'b' to URLs
url_dict = {}
for index, row in df.iterrows():
    combination = row['1st Column'] + row['2nd Column']
    url_dict[combination] = row['3rd Column']

# Create a tkinter GUI
root = tk.Tk()
root.title("URL Opener")

# Create an Entry widget for user input
entry = Entry(root)
entry.pack()

# Function to handle button click and open the URL
def open_url():
    user_input = entry.get()
    if user_input in url_dict:
        url = url_dict[user_input]
        # Use a web browser library (e.g., webbrowser) to open the URL
        # For example: webbrowser.open(url)
        print(f"Opening URL: {url}")
    else:
        print("URL not found for the input.")

# Create a button to submit the input
submit_button = Button(root, text="Submit", command=open_url)
submit_button.pack()

# Implement real-time suggestions based on user input
# You can use libraries like 'autocomplete' or implement your own suggestion logic here.

root.mainloop()
