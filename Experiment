import datetime

def is_monday_today():
    today = datetime.datetime.today()
    return today.weekday() == 0  # Monday is represented by 0 in Python's datetime module

if is_monday_today():
    # Your code to run on Monday
    print("Today is Monday. Running your code now...")
    # Call your function or run your code here
else:
    print("Today is not Monday. Skipping your code.")
