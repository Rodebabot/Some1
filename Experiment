import os

# Specify the directory path from which you want to delete files or folders
directory_path = '/path/to/directory'

# Get the list of files and folders in the specified directory
files_and_folders = os.listdir(directory_path)

# Iterate over the files and folders
for item in files_and_folders:
    item_path = os.path.join(directory_path, item)
    # Check if the item is a file or folder and if its name contains ".zip"
    if os.path.isfile(item_path) and ".zip" in item:
        # Delete the file
        os.remove(item_path)
        print(f"File '{item}' deleted.")
    elif os.path.isdir(item_path) and ".zip" in item:
        # Delete the folder and its contents recursively
        shutil.rmtree(item_path)
        print(f"Folder '{item}' and its contents deleted recursively.")
    else:
        print(f"Ignoring '{item}' as it does not match the criteria.")
