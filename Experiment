import tkinter as tk
import pandas as pd

class ExcelSearchApp:
    def __init__(self, master):
        self.master = master
        self.master.title("Excel Search App")

        # Load Excel file
        self.df = pd.read_excel("your_excel_file.xlsx")

        # Create widgets
        self.label = tk.Label(master, text="Enter Client Name:")
        self.label.pack()

        self.entry = tk.Entry(master)
        self.entry.pack()

        self.button = tk.Button(master, text="Search", command=self.search)
        self.button.pack()

        self.result_text = tk.Text(master, height=10, width=40)
        self.result_text.pack()

    def search(self):
        client_name = self.entry.get()
        result = self.df[self.df['Client Name'] == client_name]
        if not result.empty:
            info = result.to_string(index=False)
            self.result_text.delete(1.0, tk.END)  # Clear previous result
            self.result_text.insert(tk.END, info)
        else:
            self.result_text.delete(1.0, tk.END)
            self.result_text.insert(tk.END, "Client not found.")

def main():
    root = tk.Tk()
    app = ExcelSearchApp(root)
    root.mainloop()

if __name__ == "__main__":
    main()
