# Specify the directory containing your PDFs
pdf_directory = '/path/to/your/pdf/directory'

# Specify the sentence to start from
start_sentence = "The sentence to start from"

# Iterate through all PDF files in the directory
for filename in os.listdir(pdf_directory):
    if filename.endswith(".pdf"):
        input_pdf_path = os.path.join(pdf_directory, filename)
        output_pdf_path = os.path.join(pdf_directory, f"stripped_{filename}")
        strip_pdf(input_pdf_path, output_pdf_path, start_sentence)
