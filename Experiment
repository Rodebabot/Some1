import pandas as pd

# Read the first dataset from CSV
df1 = pd.read_csv('/path/to/your/first_dataset.csv')

# Read the second dataset from CSV
df2 = pd.read_csv('/path/to/your/second_dataset.csv')

# Ensure the shapes match for element-wise multiplication
if df1.shape[1] != df2.shape[0]:
    raise ValueError("Shapes of the two datasets do not match for element-wise multiplication.")

# Multiply the values element-wise
result = df1.iloc[:, 1:].values * df2.iloc[:, 1:].values

# Create the final DataFrame with the desired format
final_df = pd.DataFrame({
    'Column1': df1.iloc[:, 0],
    'Column2': result.sum(axis=1),
    'Column3': result.prod(axis=1)
})

# Display the final DataFrame
print(final_df)
