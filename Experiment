# Import necessary libraries
import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt

# Load your DataFrame (Example: df = pd.read_csv('your_file.csv'))
# For demonstration, let's create a sample DataFrame
# df = pd.read_csv('your_file.csv')  # Uncomment this line if you are loading from a CSV

# Sample data creation (remove if using your own dataset)
import numpy as np
np.random.seed(0)
df = pd.DataFrame({
    'A': np.random.rand(10),
    'B': np.random.rand(10),
    'C': np.random.choice(['Category1', 'Category2', 'Category3'], 10),
    'D': np.random.choice(['Group1', 'Group2'], 10)
})

# Convert categorical variables to numerical using one-hot encoding
df_encoded = pd.get_dummies(df)

# Calculate the correlation matrix
correlation_matrix = df_encoded.corr()

# Plot the heatmap
plt.figure(figsize=(12, 10))
sns.heatmap(correlation_matrix, annot=True, cmap='coolwarm', center=0)
plt.title('Correlation Heatmap')
plt.show()
