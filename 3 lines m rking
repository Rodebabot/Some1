import pyaudio
import wave

def list_input_devices():
    p = pyaudio.PyAudio()
    info = p.get_host_api_info_by_index(0)
    num_devices = info.get('deviceCount')

    print("Available audio input devices:")
    for i in range(0, num_devices):
        device_info = p.get_device_info_by_host_api_device_index(0, i)
        print(f"{i + 1}. {device_info['name']}")

    p.terminate()

def record_audio(device_index, duration, output_filename):
    FORMAT = pyaudio.paInt16
    CHANNELS = 1
    RATE = 44100
    CHUNK = 1024

    audio = pyaudio.PyAudio()

    stream = audio.open(format=FORMAT, channels=CHANNELS,
                        rate=RATE, input=True,
                        input_device_index=device_index,
                        frames_per_buffer=CHUNK)

    print("Recording...")

    frames = []

    for _ in range(0, int(RATE / CHUNK * duration)):
        data = stream.read(CHUNK)
        frames.append(data)

    print("Finished recording.")

    stream.stop_stream()
    stream.close()
    audio.terminate()

    with wave.open(output_filename, 'wb') as wf:
        wf.setnchannels(CHANNELS)
        wf.setsampwidth(audio.get_sample_size(FORMAT))
        wf.setframerate(RATE)
        wf.writeframes(b''.join(frames))

    print(f"Audio saved as {output_filename}")

# List available input devices
list_input_devices()

# Ask the user to select an input device
selected_device_index = int(input("Enter the number of the desired input device: ")) - 1

# Set recording parameters
record_duration = 5
output_file = "output.wav"

# Record audio using the selected input device
record_audio(selected_device_index, record_duration, output_file)



import pandas as pd

# Assuming you have two CSV files: 'file1.csv' and 'file2.csv'
file1 = pd.read_csv('file1.csv')
file2 = pd.read_csv('file2.csv')

# Concatenate along rows
result = pd.concat([file1, file2], ignore_index=True)

# Save the result to a new CSV file
result.to_csv('merged_file.csv', index=False)





import pandas as pd

# Your initial data
data = {'Col1': ['1,2'], 'Col2': ['x,y']}

# Create a DataFrame
df = pd.DataFrame(data)

# Split the values in Col1 and Col2
df['Col1'] = df['Col1'].str.split(',')
df['Col2'] = df['Col2'].str.split(',')

# Explode the lists in Col1 and Col2
df = df.explode('Col1').explode('Col2')

# Reset the index
df.reset_index(drop=True, inplace=True)

# Display the resulting DataFrame
print(df)



import pandas as pd

# Load the first Excel file into a DataFrame
file1 = pd.read_excel('path/to/file1.xlsx')

# Load the second Excel file into another DataFrame
file2 = pd.read_excel('path/to/file2.xlsx')

# Specify the columns you want to use for the VLOOKUP
lookup_column_file1 = 'column_name1'  # replace with the actual column name
lookup_column_file2 = 'column_name2'  # replace with the actual column name

# Perform the VLOOKUP
result = pd.merge(file1, file2, how='left', left_on=lookup_column_file1, right_on=lookup_column_file2)

# Print or save the result
print(result)
# or result.to_excel('path/to/output.xlsx', index=False)

