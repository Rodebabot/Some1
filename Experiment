import fitz  # PyMuPDF

def count_unique_colors(pdf_path):
    doc = fitz.open(pdf_path)

    unique_colors = set()

    for page_num in range(doc.page_count):
        page = doc[page_num]
        img = page.get_pixmap()

        for color in img.samples:
            unique_colors.add(color)

    doc.close()

    return len(unique_colors)

pdf_path = 'your_pdf_file.pdf'
num_unique_colors = count_unique_colors(pdf_path)
print(f'Total number of unique colors in the PDF: {num_unique_colors}')
