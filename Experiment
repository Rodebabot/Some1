import pandas as pd

# Assuming your dataframe is named 'result'
result = pd.DataFrame(...)  # Replace ... with your actual data

# Select columns from the 4th column onwards (inclusive)
cols_to_modify = result.columns[3:]

# Apply the absolute value function (.abs()) to selected columns
result[cols_to_modify] = result[cols_to_modify].abs()

# Print the modified dataframe (optional)
print(result)
