import pandas as pd

# Example DataFrame
data = {'Ageing Score': [10, 20, 30, 40, 50, 60]}
df = pd.DataFrame(data)

# Find the highest and second highest values in the 'Ageing Score' column
highest_value = df['Ageing Score'].max()
second_highest = df['Ageing Score'].nlargest(2).iloc[-1]

# Add 1 to the second highest value
new_value = second_highest + 1

# Replace the highest value with the new value
max_index = df['Ageing Score'].idxmax()
df.at[max_index, 'Ageing Score'] = new_value

print(df)




import pandas as pd

# Example DataFrame with repeated scores
data = {'Exposure Score': [10, 20, 30, 40, 40, 50, 60]}
df = pd.DataFrame(data)

# Create a ranking column based on the 'Exposure Score'
df['Rank'] = df['Exposure Score'].rank(method='min').astype(int)

print(df)
