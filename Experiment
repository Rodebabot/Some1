import tkinter as tk
import pandas as pd

# Read data from the Excel file
excel_file = "your_excel_file.xlsx"
df = pd.read_excel(excel_file)

def search():
    input_text = input_entry.get()
    found_keywords = []
    display_words = []

    for index, row in df.iterrows():
        keyword = row["keyword"]
        display_word = row["displayword"]
        url = row["url"]

        if keyword.lower() in input_text.lower():
            found_keywords.append(keyword)
            display_words.append(display_word)

    if found_keywords:
        keyword_box.config(text=", ".join(found_keywords))
        display_box.config(text=", ".join(display_words))
    else:
        keyword_box.config(text="No keywords found")
        display_box.config(text="")

def open_url():
    selected_display_word = display_box.cget("text")
    selected_row = df[df["displayword"] == selected_display_word]
    if not selected_row.empty:
        url = selected_row.iloc[0]["url"]
        import webbrowser
        webbrowser.open(url)

# Create the main window
root = tk.Tk()
root.title("Keyword Search App")

# Create and configure input elements
input_label = tk.Label(root, text="Enter a sentence:")
input_label.pack()
input_entry = tk.Entry(root)
input_entry.pack()
search_button = tk.Button(root, text="Search", command=search)
search_button.pack()

# Create and configure result elements
keyword_label = tk.Label(root, text="Keywords:")
keyword_label.pack()
keyword_box = tk.Label(root, text="")
keyword_box.pack()

display_label = tk.Label(root, text="Display Words:")
display_label.pack()
display_box = tk.Label(root, text="")
display_box.pack()

open_url_button = tk.Button(root, text="Open URL", command=open_url)
open_url_button.pack()

# Start the Tkinter main loop
root.mainloop()
