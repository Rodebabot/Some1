import pandas as pd

# Sample DataFrame creation for demonstration purposes
data = {
    'Type': ['External Open Buy', 'Internal Open Sell', 'Other Type', 'External Open Sell', 'Internal Open Buy', 'Another Type'],
    'Trade_Type': ['PRIN', 'AGNT', 'PRIN', 'BROK', 'PRIN', 'EXEC'],
    'Value': [100, 200, 300, 400, 500, 600]
}

df = pd.DataFrame(data)

# Define the list of types to keep
types_to_keep = [
    'External Open Buy', 
    'External Open Sell', 
    'Internal Open Buy', 
    'Internal Open Sell'
]

# Filter the DataFrame
filtered_df = df[df['Type'].isin(types_to_keep)]

# Define the valid trade type
valid_trade_type = 'PRIN'

# Create a new column with comments
filtered_df['Comment'] = filtered_df.apply(
    lambda row: 'Invalid Trade' if row['Trade_Type'] != valid_trade_type else '', axis=1
)

print(filtered_df)






# Assuming filtered_df is the DataFrame after the initial filtering step

# Check if Trade_Type is PRIN and Interest_Days and Interest_Qty are greater than 0, otherwise mark as Invalid Trade
filtered_df.loc[filtered_df['Trade_Type'] == 'PRIN', 'Comment'] = ''
filtered_df.loc[(filtered_df['Trade_Type'] == 'PRIN') & ((filtered_df['Interest_Days'] <= 0) | (filtered_df['Interest_Qty'] <= 0)), 'Comment'] = 'Invalid Trade'

print(filtered_df)
