import PyPDF2

def strip_pdf(input_path, output_path, start_sentence):
    with open(input_path, 'rb') as file:
        pdf_reader = PyPDF2.PdfFileReader(file)
        pdf_writer = PyPDF2.PdfFileWriter()

        found_start_sentence = False

        for page_num in range(pdf_reader.numPages):
            page = pdf_reader.getPage(page_num)
            text = page.extractText()

            if start_sentence in text:
                found_start_sentence = True

            if found_start_sentence:
                pdf_writer.addPage(page)

        with open(output_path, 'wb') as output_file:
            pdf_writer.write(output_file)

# Example usage:
input_pdf_path = 'input.pdf'
output_pdf_path = 'output.pdf'
start_sentence = "The sentence to start from"

strip_pdf(input_pdf_path, output_pdf_path, start_sentence)
