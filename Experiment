import pandas as pd

# Assuming df is your DataFrame with column 'A'
# Replace 'df' with the actual name of your DataFrame

# Calculate quartiles
q1 = df['A'].quantile(0.25)
q2 = df['A'].quantile(0.5)
q3 = df['A'].quantile(0.75)

# Function to assign quartile category
def assign_category(x):
    if x <= q1:
        return 'Q1'
    elif q1 < x <= q2:
        return 'Q2'
    elif q2 < x <= q3:
        return 'Q3'
    else:
        return 'Q4'

# Create column B with quartile categories
df['B'] = df['A'].apply(assign_category)



import pandas as pd

# Assuming df is your DataFrame with column 'A'
# Replace 'df' with the actual name of your DataFrame

# Calculate deciles
deciles = [i/10 for i in range(1, 10)]

# Function to assign decile category
def assign_category_decile(x):
    for i, decile in enumerate(deciles):
        if x <= df['A'].quantile(decile):
            return f'D{i+1}'
    return 'D10'

# Create column C with decile categories
df['C'] = df['A'].apply(assign_category_decile)
