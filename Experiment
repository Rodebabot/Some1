import PyPDF2
import pandas as pd

# Path to your PDF file
pdf_path = "your_pdf_file.pdf"

# Open the PDF file
with open(pdf_path, "rb") as file:
    # Create a PDF reader object
    pdf_reader = PyPDF2.PdfFileReader(file)
    num_pages = pdf_reader.numPages

    # Initialize an empty list to store the text from each page
    pdf_text = []

    # Extract text from each page
    for page_number in range(num_pages):
        # Get the page object
        page = pdf_reader.getPage(page_number)
        # Extract text from the page
        text = page.extractText()
        # Append the text to the list
        pdf_text.append(text)

# Convert the list of text into a DataFrame
df = pd.DataFrame(pdf_text, columns=["Text"])

# Write DataFrame to Excel
excel_path = "output_excel_file.xlsx"
df.to_excel(excel_path, index=False)

print("PDF text has been successfully converted to Excel.")
