# Function to handle the 'Submit' button
def submit():
    team = team_var.get()
    task = task_var.get()
    
    if team in data and task in data[team]:
        option = data[team][task]["option"]
        
        if option == "Fixed":
            result.set(data[team][task]["value"])
        else:
            try:
                value = float(entry.get())
                result.set(value * data[team][task]["value"])
            except ValueError:
                messagebox.showerror("Error", "Please enter a valid number.")
    else:
        messagebox.showerror("Error", "Team and task not found in data.")

# ...

# Set the "option" based on your predefined data
team_var.set("Team A")  # Replace with the desired team name
task_var.set("Task 1")  # Replace with the desired task name
