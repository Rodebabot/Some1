import pandas as pd
from datetime import datetime, timedelta

# Load the Excel file into a DataFrame
file_path = 'your_file.xlsx'  # Replace with your actual file path
df = pd.read_excel(file_path)

# Convert the "Pay date" column to datetime format
df['Pay date'] = pd.to_datetime(df['Pay date'])

# Get today's date
today = datetime.today()

# Calculate the date one week from today
next_week = today + timedelta(days=7)

# Filter the DataFrame for rows where the "Pay date" is between today and next week
filtered_df = df[(df['Pay date'] >= today) & (df['Pay date'] <= next_week)]

# Save the filtered DataFrame back to an Excel file (optional)
filtered_df.to_excel('filtered_data.xlsx', index=False)

print(filtered_df)
