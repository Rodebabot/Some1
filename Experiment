import pandas as pd

# Sample data
data = {
    'Entity': ['A', 'A', 'B', 'B'],
    'CCY': ['USD', 'USD', 'EUR', 'EUR'],
    'Counterparty Name': ['X', 'Y', 'X', 'Y'],
    'Value1': [10, 20, 30, 40],
    'Value2': [50, 60, 70, 80],
    'Value3': [90, 100, 110, 120]
}

# Create DataFrame
df = pd.DataFrame(data)

# Group by 'Entity', 'CCY', 'Counterparty Name' and sum the remaining columns
result = df.groupby(['Entity', 'CCY', 'Counterparty Name']).sum().reset_index()

print(result)
