import fitz  # PyMuPDF

def extract_after_keyword(pdf_path, keyword):
    doc = fitz.open(pdf_path)
    
    for page_num in range(doc.page_count):
        page = doc[page_num]
        text = page.get_text()
        
        if keyword in text:
            # Find the index of the keyword and extract content after it
            index = text.find(keyword)
            content_after_keyword = text[index + len(keyword):]
            
            # Now pass the content to your image function
            image(content_after_keyword)

    doc.close()

# Replace 'your_pdf_file.pdf' with your actual PDF file path
extract_after_keyword('your_pdf_file.pdf', 'that bro')
