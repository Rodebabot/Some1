import pandas as pd

# Define the file path
file_path = "your_excel_file.xlsx"

# Read the Excel file into a DataFrame
df = pd.read_excel(file_path)

# Add a new column V with the sign based on Operation Type
def assign_value(row):
  if row["Operation Type"] in ["SELL", "CDEL"]:
    return -row["Primary Original Quantity"]
  else:
    return row["Primary Original Quantity"]

df["V"] = df.apply(assign_value, axis=1)

# Add a new column V1 with positive Amount CCY
df["V1"] = df["Amount CCY"]

# Save the modified DataFrame back to Excel (optional)
# df.to_excel(file_path, index=False)  # Uncomment to save

# Print the DataFrame (optional)
print(df)
