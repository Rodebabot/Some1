import pandas as pd

# Assuming you have already read your CSV into a DataFrame named top_clusters
# top_clusters = pd.read_csv('path_to_csv_file.csv')

# Filter out rows where Age Band is "0-5 Days"
filtered_df = top_clusters[(top_clusters['Action Items'] == 'Unactioned') & (top_clusters['Age Band'] != '0-5 Days')]

# Calculate the number of rows to keep for the top quarter
num_rows = len(filtered_df)
top_quarter = int(num_rows * 0.25)

# Sort by Cluster Count in descending order and select the top quarter
top_quarter_df = filtered_df.sort_values(by='Cluster Count', ascending=False).head(top_quarter)

# Display the result
print(top_quarter_df)

