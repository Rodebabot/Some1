import pandas as pd
from datetime import datetime

# Assuming your dataframe is named df55
df55 = pd.DataFrame({'data': [1, 2, 3]})  # Replace with your actual data

# Get today's date in the desired format (18 Jun)
today = datetime.today().strftime('%d %b')

# Create the filename with the date appended
filename = f'df55_{today}.xlsx'

# Export the dataframe to Excel
df55.to_excel(filename, index=False)  # Set index=False to avoid index column

print(f'Dataframe exported to: {filename}')
