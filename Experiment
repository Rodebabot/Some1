import tkinter as tk
from tkinter import ttk, messagebox

def on_select(event):
    item = event.widget.focus()
    values = event.widget.item(item, "values")
    email = values[-1]  # Assuming last column contains the email
    send_email_confirmation(email)

def send_email_confirmation(email):
    confirm = messagebox.askyesno("Confirmation", f"Are you sure you want to escalate to {email}?")
    if confirm:
        # Placeholder for sending email
        print(f"Email sent to {email}")

def main():
    # Create main window
    root = tk.Tk()
    root.title("Your App Title")

    # Fields Table
    fields_frame = ttk.LabelFrame(root, text="Fields")
    fields_frame.pack(padx=10, pady=10, fill="both", expand=True)

    fields_headings = ["Sales", "Escalation Contacts", "Risk", "SSR Rate"]
    fields_data = [
        ("Value1", "Value2", "Value3", "Value4", "escalation1@example.com"),
        ("Value5", "Value6", "Value7", "Value8", "escalation2@example.com"),
        # Add more rows as needed
    ]
    fields_table = ttk.Treeview(fields_frame, columns=fields_headings, show="headings")
    for col in fields_headings:
        fields_table.heading(col, text=col)
    for row in fields_data:
        fields_table.insert("", "end", values=row)
    fields_table.pack(fill="both", expand=True)
    fields_table.bind("<ButtonRelease-1>", on_select)

    root.mainloop()

if __name__ == "__main__":
    main()
