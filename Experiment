import pandas as pd
from datetime import datetime

# Assuming your dataframe is named result_f
def convert_date_format(df):
  # Parse existing date format
  df['Value Date'] = pd.to_datetime(df['Value Date'], format='%Y-%m-%d')

  # Create new column with desired format (assuming time is 00:00:00)
  df['Value Datetime'] = df['Value Date'].dt.strftime('%Y-%m-%d-%H-%M-%S')

  # Optionally, drop the original column
  # df.drop('Value Date', axis=1, inplace=True)

  return df

# Apply the function to your dataframe
result_f = convert_date_format(result_f.copy())

# Print the modified dataframe (optional)
print(result_f)
