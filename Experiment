if __name__ == "__main__":
    root = tk.Tk()
    app = DataProcessingApp(root)
    root.mainloop()






def load_families(self, event):
    selected_state = self.state_var.get()
    selected_country = self.country_var.get()

    families = list(set(row[2] for row in self.dataset if row[1] == selected_state and row[0] == selected_country))
    self.family_dropdown['values'] = families

    # Automatically update weight based on the first family in the list
    if families:
        first_family = families[0]
        for row in self.dataset:
            if row[0] == selected_country and row[1] == selected_state and row[2] == first_family:
                self.weight_var.set(row[3])
                break





def calculate_result(self):
    selected_country = self.country_var.get()
    selected_state = self.state_var.get()
    selected_family = self.family_var.get()
    weight = self.weight_var.get()
    value = self.value_var.get()

    # Automatically update weight based on the first family in the list
    if not isinstance(weight, (float, int)):
        for row in self.dataset:
            if row[0] == selected_country and row[1] == selected_state and row[2] == selected_family:
                weight = row[3]
                self.weight_var.set(weight)
                break

    try:
        result = float(value) * weight
        self.result_var.set(result)
    except ValueError:
        # If the entered value is a string, set the weight as the result
        self.result_var.set(str(weight))





def load_families(self, event):
    selected_state = self.state_var.get()
    selected_country = self.country_var.get()

    families = list(set(row[2] for row in self.dataset if row[1] == selected_state and row[0] == selected_country))
    self.family_dropdown['values'] = families

    # Automatically update weight based on the first family in the list
    if families:
        first_family = families[0]
        for row in self.dataset:
            if row[0] == selected_country and row[1] == selected_state and row[2] == first_family:
                self.weight_var.set(row[3])
                break


def load_families(self, event):
    selected_state = self.state_var.get()
    selected_country = self.country_var.get()

    families = list(set(row[2] for row in self.dataset if row[1] == selected_state and row[0] == selected_country))
    self.family_dropdown['values'] = families

    selected_family = self.family_var.get()

    # Update weight only if the selected family changes
    if selected_family:
        for row in self.dataset:
            if row[0] == selected_country and row[1] == selected_state and row[2] == selected_family:
                self.weight_var.set(row[3])
                break
