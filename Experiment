import pandas as pd

# Sample DataFrame
data = {
    'b': ['value_b', 'value_b', 'value_b', 'value_b'],
    'c': ['value_c', 'value_c', 'value_c', 'value_c'],
    'd': ['value_d', 'value_d', 'value_d', 'value_d']
}
df = pd.DataFrame(data)

# Set column 'a' based on conditions
df['a'] = df['b'].fillna(df['c']).fillna(df['d'])

print(df)
