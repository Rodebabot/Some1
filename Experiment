import pandas as pd

# Sample DataFrame
data = {
    'Ext': ['ec', 'e', 'Ic', 'c', 'I', 'Ie'],
}

df = pd.DataFrame(data)

# Function to calculate score based on 'Ext' values
def calculate_score(ext):
    if 'e' in ext:
        return 1
    elif 'I' in ext:
        return 2
    elif 'c' in ext:
        return 3
    else:
        return None

# Create 'score' column using apply function
df['score'] = df['Ext'].apply(calculate_score)

print(df)
