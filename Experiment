import pandas as pd

def clean_roc_column(df):
  """Cleans the 'ROC' column in a DataFrame by converting to lowercase and removing special characters and spaces.

  Args:
    df: The DataFrame containing the 'ROC' column.

  Returns:
    The DataFrame with the cleaned 'ROC' column.
  """

  df['ROC'] = df['ROC'].str.lower().str.replace(r'[^a-z]', '', regex=True)
  return df

# Example usage:
data = {'ROC': ['ABC_123', 'def ghi', 'XYZ !@#$']}
df = pd.DataFrame(data)

cleaned_df = clean_roc_column(df)
print(cleaned_df)
