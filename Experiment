import pandas as pd

# Sample dataframe
data = {'Col1': ['A', 'A', 'B', 'B'], 'col2': ['B', 'v', 'A', 'r'], 'col3': [2, 3, 2, 1]}
df = pd.DataFrame(data)

def add_sum_row(df):
  """Adds a row with the sum of all columns from the 3rd onwards

  Args:
      df: The pandas DataFrame

  Returns:
      A new pandas DataFrame with the sum row added
  """
  df['Total'] = df.iloc[:, 2:].sum(axis=1)  # Sum columns from 3rd onwards
  df_with_total = df.append(df.sum(numeric_only=True).rename('Total'), ignore_index=True)  # Add sum row at the end
  return df_with_total

# Add the sum row
df = add_sum_row(df.copy())

print(df)
