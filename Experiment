import fitz  # PyMuPDF
from PIL import Image
import pytesseract

def is_text_present(image_path):
    image = Image.open(image_path)
    text = pytesseract.image_to_string(image)
    return any(c.isalpha() or c.isdigit() for c in text)

def convert_pdf_to_images_with_text(pdf_path, output_folder):
    doc = fitz.open(pdf_path)

    for page_num in range(doc.page_count):
        page = doc[page_num]
        img = page.get_pixmap()
        
        img_index = page_num + 1
        img_index_str = str(img_index).zfill(3)  # Zero-padding for sorting
        img_index_str = f"{img_index_str}.png"
        
        img_path = f"{output_folder}/{img_index_str}"
        img.save(img_path)

        if not is_text_present(img_path):
            # No recognizable text, save as a different PNG
            no_text_index_str = f"{img_index_str[:-4]}_no_text.png"
            img.save(f"{output_folder}/{no_text_index_str}")

    doc.close()

# Example usage
pdf_file_path = "your_file.pdf"
output_folder_path = "output_images"

convert_pdf_to_images_with_text(pdf_file_path, output_folder_path)
